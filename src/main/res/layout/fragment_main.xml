<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity$PlaceholderFragment">

    <ListView
        android:layout_width="346dp"
        android:layout_height="383dp"
        android:id="@+id/listview_guesses"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/guessed_number"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/button_go"
        android:hint="@string/edit_text_message"
        android:inputType="phone"
        android:maxLength="4"
        android:padding="8dp" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/play_button"
        android:layout_gravity="right"
        android:enabled="true"
        android:id="@+id/button_go"
        android:layout_alignBottom="@+id/guessed_number"
        android:layout_alignRight="@+id/listview_guesses"
        android:layout_alignEnd="@+id/listview_guesses" />

</RelativeLayout>
